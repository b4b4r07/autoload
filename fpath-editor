#autoload

tmpfile="${TMP:-/tmp}/$$$RANDOM"

if [[ ! -t 0 ]]; then
    # pipe
    return 1
else
    print -l "$fpath[@]" >|"$tmpfile"
    </dev/tty ${=EDITOR:?not set} "$tmpfile" >/dev/tty
    fpath=( ${(@f)"$(<"$tmpfile")"} )
fi

